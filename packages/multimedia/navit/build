#!/bin/sh

. config/options

get_meta $1
cd $PKG_BUILD_DIR

do_cmake_build  \
      -DCMAKE_EXE_LINKER_FLAGS=-lintl \
      -DCMAKE_BUILD_TYPE=Release \
      -DCMAKE_CXX_FLAGS="-I$LIB_PREFIX/include/interface/vcos/pthreads -I$LIB_PREFIX/include/interface/vmcs_host/linux" \
      -DCMAKE_C_FLAGS="-I$LIB_PREFIX/include/interface/vcos/pthreads -I$LIB_PREFIX/include/interface/vmcs_host/linux -O3"

